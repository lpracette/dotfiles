# vi: ft=sh

#####
# Environment
export LC_ALL="en_US.UTF-8"
export EDITOR=`which nvim`
export USE_EDITOR=$EDITOR
export VISUAL=$EDITOR
export GPG_TTY=$(tty)

# chriskempson/base16-shell
# export BASE16_SHELL_HOOKS=$HOME/.config/base16-shell/hooks

# nojhan/liquidprompt
export LP_ENABLE_TIME=1
LP_MARK_PREFIX=$'\n'
LP_MARK_GIT=ó°Š¢

# Python options
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
command -v pyenv > /dev/null && eval "$(pyenv init - zsh)"
eval "$(pyenv virtualenv-init -)"


# set PATH so it includes user's private bin if it exists
[ -d "$HOME/bin" ] && export PATH=$HOME/bin:/usr/local/bin:$PATH

[ -d "/usr/local/sbin" ] && export PATH=/usr/local/sbin:$PATH

# colorize less
export BAT_THEME=zenburn

export FZF_DEFAULT_OPTS="
    --bind='?:toggle-preview'
    --bind='ctrl-u:preview-page-up'
    --bind='ctrl-d:preview-page-down'
    --preview-window 'right:60%:wrap'
    --preview 'less {}'"

NICE_LESSOPEN='|f=%s && [ -d "$f" ] && tree -L 2 -d -C $f || (
  [ "$(head -c 4 $f 2>/dev/null | tail -c 3)" = "PDF" ] && pdftotext -layout $f - || (
  [ -f "$f" ] && bat --color=always $f 2>/dev/null || (
  [[ $commands[$f] ]] && /usr/bin/man -P cat $f || (
  git branch -vvv --color=always 2>/dev/null | grep -E "^.*$f" ||
  echo $f))))'

command -v bat > /dev/null && \
    command -v pdftotext > /dev/null && 
    command -v tree > /dev/null && \
    command -v git > /dev/null && \
    export LESSOPEN="$NICE_LESSOPEN"

